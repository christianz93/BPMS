<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <managed-bean>
        <managed-bean-name>pruebaController</managed-bean-name>
        <managed-bean-class>mx.com.bmt.bpms.controller.PruebaController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>prueba</property-name>
            <value>#{prueba}</value>
        </managed-property>
        <managed-property>
            <property-name>paisService</property-name>
            <value>#{paisService}</value>
        </managed-property></managed-bean>
</faces-config>
